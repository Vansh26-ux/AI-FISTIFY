document.getElementById("summarizeBtn").addEventListener("click", async () => {
  const text = document.getElementById("videoInput").value;
  if (!text) return alert("Please paste the video text first!");

  const res = await fetch("/api/summarize", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ text }),
  });

  const data = await res.json();
  document.getElementById("summaryOutput").innerText = data.summary || data.message;
});
